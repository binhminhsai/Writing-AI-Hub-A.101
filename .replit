modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[[ports]]
localPort = 8080
externalPort = 80

[workflows]
runButton = "run_dev.py"

[[workflows.workflow]]
name = "run_dev.py"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "web"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "curl -s http://localhost:8080/"

[deployment]
run = ["sh", "-c", "curl -s http://localhost:8080/"]
